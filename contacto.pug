			div(class="menu__icono")
					p(id="js-icono")
						span(class="icon-menu-fontello")

		
		div(class="contenedor-formulario")
			div(class="formulario")
				img(src="recursos/logos/logo-clap-default-transparent.png" class="formulario__image")
				div(class="contenedor-inputs")
					form(id="js-formulario-contacto")
						div(class="contenedor__opciones")
							p(class="opciones__titulo") Tipo de contacto
							input(type="radio" name="tp" value="persona-empresarial" id="empresarial"  class="formulario__radio")  
							<label for="empresarial" class="formulario__label"> Jurídica </label>
							input(type="radio" name="tp" value="persona-juridica" id="persona" class="formulario__radio")  
							<label for="persona" class="formulario__label"> Persona </label>
						input(type="text" placeholder="Nombre" class="formulario__input" id="js-input-referencia")
						input(type="text" placeholder="Apellido" class="formulario__input")
						input(type="text" placeholder="Email" class="formulario__input")
						input(type="text" placeholder="Teléfono" class="formulario__input")
						

						textarea(placeholder="Mensaje" class="formulario__textarea" maxlength="200" title="Escriba el motivo por el que llegó a esta sección")
						input(type="submit" value="Enviar datos" class="formulario__submit" title="Este formulario aún no almacena información")
		
